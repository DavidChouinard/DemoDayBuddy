<% @startups.each do |startup| %>
  
	<div class="box">
		<div class="head">
			<img class="avatar" src="<%= startup.ceo_avatar_path %>" width="50" height="50" class="avatar">
			<div class="meta">
				<h3><%= startup.name %></h3>
				<p>Pitched by <span class="name"><%= startup.ceo_name %></span> at <span class="name"><%= startup.pitch_time.strftime("%-H:%M") %></span> </p>
			</div>
		</div>
		<div style="clear:both;"></div>
	    
    <div class="company"><p><%= startup.pitch %></p></div>
    
    <p>
  		<button class="btn btn-success" id="ping" type="button">reach out</button>
		</p>
	</div>

<% end %>
